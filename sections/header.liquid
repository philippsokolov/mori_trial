<div id="top-margin-main">
  <div class="logo smaller">
{% if section.settings.mori_logo != blank %}
    <a href='https://babymori.com/' target="_target">
    <img id="mori-logo" src="{{ section.settings.mori_logo | img_url: 'master' }}"/></a>
{% endif %}
  </div>

<div class="header_image">
  <img class="mobi" id="cover" src="{{ section.settings.cover_image | img_url: 'master' }}"/></a>
  <div id="container_text">
  <h1 class="big_page_heading">{{ section.settings.heading}}</h1>
  <h2>{{ section.settings.heading_text}}</h2>
  <a class="btn show-more">{{section.settings.button_text}}</a>
</div>
</div>
</div>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "mori_logo",
        "label": "Logo image"
      },
      {
        "type": "image_picker",
        "id": "cover_image",
        "label": "Cover Image"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "button text",
        "default": "Show more"
      },
      {
        "type": "text",
        "id": "heading_text",
        "label": "Heading Text",
        "default": "We're making playtimes fun and sleeptimes peaceful"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Yoga Pants"
      }
    ]
  }
{% endschema %}
