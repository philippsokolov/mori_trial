<div class="hero-image">
    {% if section.settings.image != nil %}
      <div class="h-image">
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="">
      </div>
    {% endif %}
    <div class="hero-text">
        {% if section.settings.header != blank %}
            <h1>{{ section.settings.header | escape}}</h1>
        {% endif %}
        
        {% if section.settings.subtitle != blank %}
            <p>{{ section.settings.subtitle | escape }}</p>
        {% endif %}
        <a href="#image-one" class="btn">Show more</a>
    </div>
</div>

{% schema %}
  {
    "name": "Hero banner",
    "settings": [
      {
        "id": "header",
        "type": "text",
        "label": "Header",
        "default": "Yoga pants"
      },
      {
        "id": "subtitle",
        "type": "text",
        "label": "Subtitle",
        "default": "Weâ€™re making playtimes fun and sleeptimes peaceful"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  /* The hero image */

  .hero-image {
      /* Set a specific height */
      height: 600px;
      position: relative;
  }

  .h-image {
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      display: block;
  }

  .h-image img {
      width: 100%;
      height: 600px;
      object-fit: cover;
  }


  /* Center hero text */

  .hero-text {
      text-align: center;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-family: 'Raleway', sans-serif;
  }
{% endstylesheet %}

