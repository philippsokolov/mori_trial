<div class="hero-image">
    <div class="hero-text">
        {% if section.settings.header != blank %}
            <h1>{{ section.settings.header | escape}}</h1>
        {% endif %}
        
        {% if section.settings.subtitle != blank %}
            <p>{{ section.settings.subtitle | escape }}</p>
        {% endif %}
        <a href="#image-one" class="btn">Show more</a>
    </div>
</div>

{% schema %}
  {
    "name": "Hero banner",
    "settings": [
      {
        "id": "header",
        "type": "text",
        "label": "Header",
        "default": "Yoga pants"
      },
      {
        "id": "subtitle",
        "type": "text",
        "label": "Subtitle",
        "default": "Weâ€™re making playtimes fun and sleeptimes peaceful"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  /* The hero image */

  .hero-image {
      /* The image to be used as a background */
      background-image: url("{{ 'hero1.jpg' | asset_img_url }}");
      /* Set a specific height */
      height: 600px;
      /* Position and center the image to be responsive */
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      position: relative;
  }


  /* Center hero text */

  .hero-text {
      text-align: center;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-family: 'Raleway', sans-serif;
  }
{% endstylesheet %}

