<div class="info-left" id="info">
    {% if section.settings.image != blank %}
        <div class="info-image-left">
            <img src="{{ section.settings.image | img_url: 'master' }}" alt="">
        </div>
    {% endif %}
    <div class="info-left-content">
        {% if section.settings.header != blank %}
            <h1>{{ section.settings.header | escape}}</h1>
        {% endif %}
        {% if section.settings.text != blank %}
            <p>{{ section.settings.text | escape }}</p>
        {% endif %}
    </div>
</div>

{% schema %}
  {
    "name": "Info Left",
    "settings": [
      {
        "id": "header",
        "type": "text",
        "label": "Header",
        "default": "Colours and styles"
      },
      {
        "id": "text",
        "type": "text",
        "label": "Text",
        "default": "All styles feature a white front with preferred colour on the back of the leg to create a stylish design. MORIâ€™s yoga pants can be paired with our t-shirts or cardigans for a daytime outfit, or worn as pyjamas with a bodysuit."
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  .info-left {
      max-width: 100%;
      background-image: url("image2.jpg");
      height: 750px;
      background-position: left;
      background-repeat: no-repeat;
      position: relative;
      overflow: hidden;
  }

  .info-image-left {
      position: absolute;
      right: 0;
      top: 0;
      bottom: 0;
  }

  .info-left-content {
      text-align: center;
      position: absolute;
      top: 60%;
      left: 30%;
      transform: translate(-60%, -70%);
      font-family: 'Raleway', sans-serif;
      height: 200px;
      width: 600px;
  }

  @media screen and (max-width: 1330px) {
      .info-left-content {
          top: 60%;
          left: 30%;
          transform: translate(-60%, -70%);
          height: 300px;
          width: 400px;
      }
  }

  @media screen and (max-width: 960px) {
      .info-left-content {
          top: 40%;
          left: 30%;
          transform: none;
          height: 300px;
          width: 400px;
      }
  }

  @media screen and (max-width: 768px) {
      .info-left-content {
          top: 60%;
          left: 40%;
          width: 80%;
          height: auto;
          transform: translate(-40%, -30%);
          color: #ffffff;
      }
  }
{% endstylesheet %}

