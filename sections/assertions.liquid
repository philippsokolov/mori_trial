<div class="assertions">
    <div class="assertion-container">
        {% for assertion in section.blocks %}
            {% if assertion.settings.text != blank %}
                <div class="assertion">
                <p><i class="fa fa-check"></i> {{ assertion.settings.text }}</p>
            </div>
            {% endif %}
        {% endfor %}
    </div>
    <a href="https://babymori.com/collections/mori-baby-essentials/products/yoga-pant" class="btn">{% if section.settings.buttontext != blank %}{{ section.settings.buttontext }}{% endif %}</a>
</div>

{% schema %}
  {
    "name": "Assertions",
    "max_blocks": 3,
    "settings": [
        {
            "id": "buttontext",
            "type": "text",
            "label": "Button title",
            "default": "Buy now"
        }
    ],
    "blocks": [
        {
            "type": "text",
            "name": "Text",
            "settings": [
            {
                "label": "Text",
                "id": "text",
                "type": "text"
            }
            ]
        }
    ]
  }
{% endschema %}

{% stylesheet %}
    /* Assertions  */

    .assertions {
        width: 100%;
        text-align: center;
        border-bottom: 1px solid #efefef;
        border-top: 1px solid #efefef;
        padding-bottom: 30px;
        padding-top: 30px;
    }

    .assertion-container {
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        padding-bottom: 30px;
    }

    .assertion {
        font-style: italic;
    }
{% endstylesheet %}

