textarea:focus,
input:focus {
    outline: none
}

.shopify-preview-bar {
    display: none
}

@media (max-width: 719px) {
    .wrapper {
        padding: 0px
    }
}

a.text_link {
    line-height: 3;
    font-style: italic;
    border-bottom: 1px solid #ccc
}

.btn {
    background-color: #c2e2de;
    color: #fff;
    text-transform: uppercase;
    font-family: "Raleway", sans-serif;
    padding: 0.6em 1em;
    margin: 2em 0;
    font-size: 1.2em;
    letter-spacing: 2px;
    -webkit-transition: 0.3s all ease;
    -o-transition: 0.3s all ease;
    transition: 0.3s all ease
}

.btn.mori_green {
    background-color: #c2e2de
}

.btn:hover {
    background-color: #b9d6d2
}

@media (max-width: 719px) {
    .btn {
        margin: 1.5em 0
    }
}

.btn.small {
    font-size: 1.1em
}

.btn.light {
    background-color: #dadada
}

.btn.light:hover {
    background-color: #ccc
}

.btn.auto_width {
    width: auto !important
}

.btn_separator {
    width: 20px;
    display: inline-block
}

.buttons_section {
    text-align: center;
    margin: 1em auto
}

.buttons_section .btn {
    display: inline-block;
    min-width: 30%
}

@media (max-width: 719px) {
    .buttons_section .btn {
        min-width: 90%;
        margin: 0.5em auto;
        display: block
    }
}



